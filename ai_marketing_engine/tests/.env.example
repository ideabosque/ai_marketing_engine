# ============================================================================
# AI Marketing Engine Environment Configuration
# ============================================================================
# Copy this file to .env in the same directory and fill in your values
# Note: Never commit the actual .env file with real credentials to version control

# ============================================================================
# Base Directory Configuration
# ============================================================================
# Base directory for the project - used for module imports
base_dir=/path/to/your/silvaengine

# ============================================================================
# AWS Configuration
# ============================================================================
# AWS region where your DynamoDB tables and other resources are located
region_name=us-west-2

# AWS credentials for accessing DynamoDB, S3, and Lambda services
# These should be from an IAM user with appropriate permissions
aws_access_key_id=YOUR_AWS_ACCESS_KEY_ID
aws_secret_access_key=YOUR_AWS_SECRET_ACCESS_KEY

# S3 bucket for storing marketing files and assets
aws_s3_bucket=your-ai-marketing-files-bucket

# ============================================================================
# Application Configuration
# ============================================================================
# Endpoint identifier for multi-tenant isolation
# This is used as the hash key for all DynamoDB tables
endpoint_id=your-endpoint-id

# ============================================================================
# Test Configuration
# ============================================================================
# Test execution mode:
# - local_for_all: Run all functions locally (no AWS Lambda calls)
# - local_for_aws_lambda: Use AWS Lambda for some operations
# - aws: Use AWS services for all operations
execute_mode=local_for_all

# Whether to initialize/create DynamoDB tables on startup
# Set to 1 to create tables, 0 to skip (useful if tables already exist)
initialize_tables=0

# ============================================================================
# Optional: Test Filtering (for pytest)
# ============================================================================
# Run only specific test functions by name
# AI_MARKETING_TEST_FUNCTION=test_graphql_contact_profile_list

# Run only tests with specific markers (comma or space separated)
# AI_MARKETING_TEST_MARKERS=integration,nested_resolvers

# ============================================================================
# Module Configuration (Optional)
# ============================================================================
# S3 bucket for storing Lambda function modules/adapters
# module_bucket_name=your-module-bucket

# Local paths for module caching
# module_zip_path=/tmp/adaptor_zips
# module_extract_path=/tmp/adaptors

# ============================================================================
# DynamoDB Table Configuration (Auto-created with table prefix)
# ============================================================================
# The following tables will be created/accessed:
# - ame-activity_history
# - ame-attribute_values
# - ame-contact_profiles
# - ame-contact_requests
# - ame-corporation_profiles
# - ame-places
#
# All tables use endpoint_id as the hash key for tenant isolation

# ============================================================================
# Example Configurations for Different Environments
# ============================================================================

# Development Example:
# region_name=us-west-2
# aws_access_key_id=AKIA...
# aws_secret_access_key=...
# endpoint_id=dev-tenant
# execute_mode=local_for_all
# initialize_tables=1

# Production Example:
# region_name=us-west-2
# aws_access_key_id=AKIA...
# aws_secret_access_key=...
# endpoint_id=prod-tenant
# execute_mode=aws
# initialize_tables=0
